#!/usr/bin/env bash

# Compare original and gripped file size

if [ $# -ne 1 ]; then
  echo 'Usage: `gz <file>`'
  exit 1
fi

origsize=$(wc -c < $file)
gzipsize=$(gzip -c $file | wc -c)
ratio=$(echo "$gzipsize * 100 / $origsize" | bc -l)

printf "orig: %d bytes\n" $origsize
printf "gzip: %d bytes (%2.2f%%)\n" $gzipsize $ratio
