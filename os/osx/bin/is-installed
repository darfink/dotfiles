#!/usr/bin/env bash

# A naive implementation of checking for packages
# installed.

if [ $# -ne 1 ]; then
  echo 'Usage: `is-installed <package>`'
  exit 1
fi

if [ hash brew 2>/dev/null ]; then
  test -n $(brew ls --versions "$1")
else
  echo 'Cannot identify a package querying system' >&2
  exit 0
fi

exit $?